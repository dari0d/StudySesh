<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9d5e0">

    <TextView
        android:id="@+id/txtLiveTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Session Tracking"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/txtSessionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tracking: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtLiveTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtPickupLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone pickups:"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/txtSessionName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/txtPickupCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtPickupLabel"
        app:layout_constraintStart_toEndOf="@+id/txtPickupLabel"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btnEndSession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="End Session"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
